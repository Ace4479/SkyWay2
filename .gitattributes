    <script>
        // DOM Elements
        const loginBtn = document.getElementById('loginBtn');
        const loginModal = document.getElementById('loginModal');
        const closeModal = document.getElementById('closeModal');
        const showRegisterBtn = document.getElementById('showRegisterBtn');
        const showLoginBtn = document.getElementById('showLoginBtn');
        const registerContainer = document.getElementById('registerContainer');
        const loginForm = document.getElementById('loginForm');
        const searchBtn = document.getElementById('searchBtn');
        const flightResults = document.getElementById('flightResults');
        const searchSection = document.getElementById('searchSection');
        const bookBtns = document.querySelectorAll('.book-btn');
        const paymentSection = document.getElementById('paymentSection');
        const dashboardSection = document.getElementById('dashboardSection');
        const doLoginBtn = document.getElementById('doLoginBtn');
        const logoutBtn = document.getElementById('logoutBtn');
        const sidebarLinks = document.querySelectorAll('.sidebar-menu a');
        const dashboardPanels = document.querySelectorAll('.dashboard-panel');

        // Show Login Modal
        loginBtn.addEventListener('click', () => {
            loginModal.style.display = 'flex';
        });

        // Close Modal
        closeModal.addEventListener('click', () => {
            loginModal.style.display = 'none';
        });

        // Show Register Form
        showRegisterBtn.addEventListener('click', (e) => {
            e.preventDefault();
            loginForm.style.display = 'none';
            registerContainer.style.display = 'block';
        });

        // Show Login Form
        showLoginBtn.addEventListener('click', (e) => {
            e.preventDefault();
            registerContainer.style.display = 'none';
            loginForm.style.display = 'block';
        });

        // Close Modal on Outside Click
        window.addEventListener('click', (e) => {
            if (e.target === loginModal) {
                loginModal.style.display = 'none';
            }
        });

        // Search Flights
        searchBtn.addEventListener('click', () => {
            flightResults.style.display = 'block';
            // Simulate API call for flight search results
            setTimeout(() => {
                window.scrollTo({
                    top: flightResults.offsetTop - 20,
                    behavior: 'smooth'
                });
            }, 100);
        });

        // Book Flight
        bookBtns.forEach(btn => {
            btn.addEventListener('click', () => {
                // Check if user is logged in
                const isLoggedIn = loginBtn.textContent === 'John Doe';
                if (!isLoggedIn) {
                    loginModal.style.display = 'flex';
                    // After login, would redirect to payment
                } else {
                    showPaymentSection();
                }
            });
        });

        // Show Payment Section
        function showPaymentSection() {
            searchSection.style.display = 'none';
            flightResults.style.display = 'none';
            paymentSection.style.display = 'block';
        }

        // Login Action
        doLoginBtn.addEventListener('click', () => {
            // Simulate authentication
            loginModal.style.display = 'none';
            loginBtn.textContent = 'John Doe';
            
            // If user was trying to book a flight, show payment section
            // Otherwise, show dashboard
            if (flightResults.style.display === 'block') {
                showPaymentSection();
            } else {
                showDashboard();
            }
        });

        // Show Dashboard
        function showDashboard() {
            searchSection.style.display = 'none';
            flightResults.style.display = 'none';
            paymentSection.style.display = 'none';
            dashboardSection